<resources>
    <!-- Button styles -->
    <style name="GradientButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="rippleColor">#80FFFFFF</item>
    </style>

    <!-- Popup menu style with black text -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PopupMenuTextStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemTextAppearance">@style/PopupMenuItemTextStyle</item>
    </style>

    <style name="PopupMenuItemTextStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>